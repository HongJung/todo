= form_for @todo_list do |f|
  - if @todo_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo_list.errors.count, "error")} prohibited this todo_list from being saved:"
      %ul
        - @todo_list.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .field
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .field
    = f.label :color
    -# %select#color.form-control=@colors
    = f.select :color, @colors, {include_blank: true}, {class: 'form-control'}

  .field
    = f.label :due_date
    = f.text_field :due_date, {class: 'form-control datetimepicker'}
  .field
    = f.label :complete
    = f.check_box :complete
  .actions
    = f.submit 'Save', class: "btn btn-primary"
